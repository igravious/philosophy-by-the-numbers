<h1><%= @page_title %></h1>

<div class="dashboard-container">
  <div class="dashboard-summary">
    <h2>Database Overview</h2>
    <p>Total Tables: <%= @table_counts.size %></p>
    <p>Total Records: <%= @table_counts.values.sum %></p>
    <p>Largest Tables: <%= @table_counts.first(5).map { |table, count| "#{table} (#{count})" }.join(', ') %></p>
  </div>

  <div class="table-counts">
    <h2>Table Row Counts</h2>
    <table class="dashboard-table">
      <thead>
        <tr>
          <th>Table Name</th>
          <th>Row Count</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @table_counts.each do |table, count| %>
          <tr>
            <td><code><%= table %></code></td>
            <td class="count"><%= count.to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %></td>
            <td><%= table_description(table) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<style>
.dashboard-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
}

.dashboard-summary {
  background: #f5f5f5;
  padding: 20px;
  margin-bottom: 30px;
  border-radius: 5px;
}

.dashboard-table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20px;
}

.dashboard-table th,
.dashboard-table td {
  padding: 12px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}

.dashboard-table th {
  background-color: #f8f9fa;
  font-weight: bold;
}

.dashboard-table tr:hover {
  background-color: #f5f5f5;
}

.count {
  font-weight: bold;
  color: #2c5aa0;
  text-align: right;
}

code {
  background: #f1f1f1;
  padding: 2px 4px;
  border-radius: 3px;
  font-family: monospace;
}
</style>