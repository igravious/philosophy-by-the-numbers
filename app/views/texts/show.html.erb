		plain = if @text.fyle_id.nil?
			'no file'
		else
			#"<a href='#{text.plain_file}'>#{File.basename text.plain_file}</a>"
			link_to (fa_stacked_icon "file-text", base: "square-o", class: "fa-1x"), fyle_url(@text.fyle_id) # link name was text.fyle_id.to_s
		end
%> |
